{
  "name": "specialist",
  "description": "A library that helps you write tiny, fast, bundled and beautiful CLI apps that can automatically check for updates.",
  "version": "0.2.0",
  "main": "dist/src/index.js",
  "bin": "dist/src/bin/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "compile": "tsc --skipLibCheck && tstei",
    "compile:watch": "tsc --skipLibCheck --watch",
    "prepublishOnly": "npm run clean && npm run compile"
  },
  "bugs": {
    "url": "https://github.com/fabiospampinato/specialist/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Fabio Spampinato",
    "email": "spampinabio@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fabiospampinato/specialist.git"
  },
  "keywords": [
    "simple",
    "command-line",
    "cli",
    "app",
    "application",
    "tiny",
    "fast",
    "bundled",
    "beautiful",
    "easy"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "colorette": "^1.2.2",
    "commander": "^7.2.0",
    "tiny-updater": "^1.0.0"
  },
  "peerDependencies": {
    "esbuild": "*"
  },
  "devDependencies": {
    "esbuild": "^0.11.20",
    "rimraf": "^3.0.0",
    "typescript": "^3.5.3",
    "typescript-transform-export-interop": "^1.0.2"
  }
